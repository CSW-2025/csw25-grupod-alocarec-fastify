{
  "compilerOptions": {
    "target": "ES2020",
    "baseUrl": "src",
    "module": "commonjs",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "./dist",
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"],
      "@usuarios/*": ["src/domains/usuario/*"],
      "@pedidos/*": ["src/domains/pedido/*"]
    },
    "rootDir": ".",
    "types": ["node", "jest"],
    "typeRoots": ["./node_modules/@types"],
    "resolveJsonModule": true,
    "moduleResolution": "node"
  },
  "include": ["src", "__tests__", "jest.config.ts", "jest.setup.ts"],
  "exclude": ["node_modules", "dist"]
}