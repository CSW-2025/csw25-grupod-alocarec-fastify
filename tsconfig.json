{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "./dist",
    "rootDir": "./src",
    "baseUrl": ".", 
    "paths": {
      "@usuarios/*": ["src/domains/usuario/*"]
    }
  },
  "include": ["src"],
  "exclude": ["node_modules", "dist"]
}