{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "./dist",
    "baseUrl": ".", 
    "paths": {
      "@/*": ["src/*"],
      "@usuarios/*": ["src/domains/usuario/*"],
      "@pedidos/*": ["src/domains/pedido/*"]
    },
    "rootDir": "src",
    "types": ["node", "jest"],
    "typeRoots": ["./node_modules/@types"],
    "resolveJsonModule": true,
    "moduleResolution": "node",
    "sourceMap": true,
    "declaration": true,
    "removeComments": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "strictFunctionTypes": true,
    "strictBindCallApply": true,
    "strictPropertyInitialization": true,
    "noImplicitThis": true,
    "alwaysStrict": true
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist", "__tests__", "jest.config.ts", "jest.setup.ts"]
}
