generator client {
  provider = "prisma-client-js"
  output   = "./generated/client"  // Adicionando o caminho de sa√≠da
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Usuario {
  id        Int      @id @default(autoincrement())
  nome      String
  email     String   @unique
  senha     String
  ativo     Boolean  @default(true)
  tipo      String   @default("usuario") // admin, professor, aluno
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}
